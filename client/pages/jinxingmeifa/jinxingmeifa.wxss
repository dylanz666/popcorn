page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.in-image {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.hot-view {
  display: flex;
  flex-direction: row;
  flex-wrap: "wrap";
  align-items: center;
  width: 100%;
  margin-left: 0;
}

.hot-image {
  margin-top: 20rpx;
  margin-left: 40rpx;
  width: 200rpx;
  height: 200rpx;
}

.view-flex-column {
  display: flex;
  flex-direction: column;
  flex-wrap: "wrap";
  box-sizing: border-box;
  justify-content: center;
  text-align: center;
  height: 200rpx;
  width: 400rpx;
}

.view-flex-row {
  display: flex;
  flex-direction: row;
  flex-wrap: "wrap";
}

.button-bottom {
  margin-bottom: 10rpx;
}
